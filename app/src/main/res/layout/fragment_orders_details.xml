<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.oderdetails.OderDeatilsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/oderStatus"
            android:text="Orders State: Canceled"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/date"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/mapImage"
            android:src="@android:color/holo_blue_light"
            android:layout_height="140dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="@dimen/five"
            android:padding="@dimen/five"
            android:background="@color/white"
            android:layout_height="wrap_content">
            
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/orderNumber"
                android:text="38848447584943"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/amount"
                android:text="$200,000"
                android:layout_below="@+id/orderNumber"
                android:layout_height="wrap_content"/>


            <Button
                android:layout_width="wrap_content"
                android:id="@+id/reorder"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/orderAgain"
                android:layout_height="wrap_content"/>
            
        </RelativeLayout>

    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/products"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView"/>



</LinearLayout>